@model List<AcunMedyaPortfolio1.Models.TblAbout>

@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>About Listesi</h2>
<table class=" table table-bordered ">
    <tr>
        <th>About Id</th>
        <th>About Etiketi</th>
        <th>About Açıklaması</th>
        <th>About Resim </th>
        <th>Sil</th>
    </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl" class="img-fluid" style="width:200px;height:150px" /></td>
            <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-danger">Sil</a></td>
        </tr>
    }

</table>
<a href="/About/CreateAbout/" class="btn btn-primary">Yeni About Girişi </a>


