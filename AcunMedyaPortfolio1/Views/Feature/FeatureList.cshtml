@model List<AcunMedyaPortfolio1.Models.TblFeature>
@{
    ViewBag.Title = "FeatureList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Feature Listesi </h2>

<table class=" table table-bordered ">
    <tr>
        <th>Feature Id</th>
        <th>İsim Soyisim </th>
        <th>Açıklama Kısmı</th>
        <th>Proje Adı</th>
        <th>Resim</th>
        <th>Sil</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FeatureID</td>
            <td>@item.NameSurname</td>
            <td>@item.Description</td>
            <td>@item.ProjectName</td>
            <td><img src="@item.ImageUrl" class="img-fluid" style="width:200px;height:150px" /></td>
            <td><a href="/Feature/DeleteFeature/@item.FeatureID" class="btn btn-danger">Sil</a></td>            
        </tr>
    }

</table>
<a href="/Feature/CreateFeature/" class="btn btn-primary">Yeni Feature Girişi</a>
