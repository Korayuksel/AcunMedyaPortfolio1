
@{
    ViewBag.Title = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Özellik Ekleme Sayfası</h2>
<form method="post">
    <label>Feature Name-Surname</label>
    <input type="text" class="table table-bordered" name="NameSurname" />
    <br />
    <label>Feature Description</label>
    <textarea rows="4" class="table table-bordered" name="Description"></textarea>
    <br />
    <label>Proje Adı</label>
    <input type="text" class="table table-bordered" name="ProjectName" />
    <br />
    <label>Proje Resim Yolu</label>
    <input type="text" class="table table-bordered" name="ImageUrl" />
    <br />
    <button class="btn btn-info"> Özelliği Kaydet </button>
</form>

