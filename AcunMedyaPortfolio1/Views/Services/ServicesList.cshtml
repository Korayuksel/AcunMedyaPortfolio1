@model List<AcunMedyaPortfolio1.Models.TblServices>
@{
    ViewBag.Title = "ServicesList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Servis Listesi </h2>

<table class=" table table-bordered ">
    <tr>
        <th>Service Id</th>
        <th>Servis Etiketi</th>
        <th>Servis Açıklaması</th>
        <th>Servis Resim Yolu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.ImageUrl</td>
            <td><a href="/Services/DeleteServices/@item.ServiceID" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-success">Güncelle</a>
            <td>
        </tr>
    }

</table>
<a href="/Services/CreateServices/" class="btn btn-primary">Yeni Servis Girişi</a>

